@model AddOrEditAlbumViewModel
@{
    string title = "Add a new album";
    ViewBag.Title = title;
}

<h2>@title</h2>

<form asp-controller="Album" asp-action="Add" method="post" enctype="application/x-www-form-urlencoded">
    <partial name="_AlbumFormFieldsPartial" model="@Model" />

    <input type="submit" value="Add album" class="btn btn-primary" />
    <a asp-controller="Album" asp-action="List" class="btn btn-primary">Cancel</a>
</form>