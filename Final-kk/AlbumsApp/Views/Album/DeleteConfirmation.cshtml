@model Album

@{
    ViewBag.Title = "Delete Album";
}

<h2>Confirm Deletion:</h2>
<h3>@Model.Name (@Model.YearProduced)</h3>

<form asp-controller="Album" asp-action="Delete" asp-route-id="@Model.AlbumId" method="post" enctype="application/x-www-form-urlencoded">
    <input type="submit" class="btn btn-primary" value="Delete" />
    <a asp-controller="Album" asp-action="List" class="btn btn-primary">Cancel</a>
</form>